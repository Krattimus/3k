#class {bot} {open}

#var {no_loop} {1}
#var {no_home} {1}
#var {hardmode} {0}
#var {settings[shouldVacuum]} {1}

#NOP TRIM PATH - Avoids smurf-eaters and squirrel
#var {patrol[path]} {s;s;s;w;e;e;w;s;w;e;e;e;w;sw;se;w;e;s;w;w;n;s;e;e;e;s;s;s;s;s;enter;w;e;e;w;s;w;e;e;w;s;w;e;e;w;s;w;e;e;w;s;w;e;e;w;s;w;e;s;w;e;e;w;n;e;out;n}
#NOP FULL PATH #var {patrol[path]} {s;s;s;w;e;e;w;s;w;e;e;e;w;sw;se;w;e;s;w;w;n;s;e;e;n;e;s;s;s;s;e;w;w;w;w;e;e;e;s;s;enter;w;e;e;w;s;w;e;e;w;s;w;e;e;w;s;w;e;e;w;s;w;e;e;w;s;w;e;s;w;e;e;w;n;e;out;n}

#act {=M= %*{Smurf|A very large rat|A large furry spider|Azrael|Gargamel}} {
	#switch {"%2"} {
		#case {"Smurf"}			{#var patroller[shouldKill] smurf};
		#case {"A very large rat"}	{#var patroller[shouldKill] rat};
		#case {"A large furry spider"}	{#var patroller[shouldKill] spider};
		#case {"Azrael"}		{#var patroller[shouldKill] azrael};
		#case {"Gargamel"}		{#var patroller[shouldKill] gargamel}
	};
	#if {"$patroller[shouldKill]" == "smurf"} {
		#REGEX {"%0"} {Papa Smurf} {
			#NOP
		} {
			_check_mob
		}
	} {
		_check_mob
	}
}

#act {=M= Papa Smurf <?>} {mission ask;mission accept}
#act {=M= Papa Smurf <!>} {mission return}
#act {=M= Papa Smurf <.>} {#nop}

#class {bot} {close}
